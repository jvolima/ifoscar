generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Student {
  id           String  @id @default(uuid())
  name         String
  registration String?
  gender       String

  videoclip_id String?
  videoclip    VideoClip? @relation(fields: [videoclip_id], references: [id])
}

model VideoClip {
  id         String   @id @default(uuid())
  name       String
  created_at DateTime @default(now())
  link       String

  students Student[]
}
